/* pages/memory/memory.wxss */
.picker {
  text-align: center;
  font-size: 40rpx;
  margin-top: 30rpx;
  font-weight: 700;
}
.container {
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 50rpx auto;
}
.item {
  width: 45%;
  display: flex;
  flex-direction: column;
  text-align: center;
  border: 1px solid #4e4e4e;
  margin-bottom: 40rpx;
}
.item-image {
  width: 100%;
  height: 300rpx;
}
.item-text {
  font-size: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-top: 1px solid #4e4e4e;
}