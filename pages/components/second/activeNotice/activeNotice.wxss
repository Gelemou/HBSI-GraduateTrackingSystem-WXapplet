.container {
  width: 100%;
  margin: 50rpx auto;
  display: flex;
  flex-wrap: wrap;
}
.item {
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 50rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid grey;
}
.item:last-child {
  border-bottom: none;
}
.itemImage {
  width: 200rpx;
  height: 200rpx;
}
.itemTitle {
  width: 300rpx;
  padding-left: 50rpx;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}